.card.mb-3
  .card-header
    Tags
  .list-group-list-group-flush
    .list-group-item
      - @tags.each do |tag|
        = link_to courses_path(courses_search: { course_tags_tag_id_eq: tag.id }), class: 'btn btn-info me-2' do
          = tag.name
          %span.badge.rounded-pill.bg-light.text-dark
            = tag.course_tags_count