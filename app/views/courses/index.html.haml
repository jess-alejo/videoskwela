- page_title "All Courses"

%h1
  Courses
  = action_name.titleize
  \:
  = @courses.length

.row
  .col-md-3.mb-3
    %aside
      = render 'filter_course'
      = render 'sort_course'
      = render 'filter_course_by_tags'

  .col-md-9
    .course-container
      = render @courses

    - if @courses.length > 0
      .mt-4.d-flex.justify-content-between
        %span.text-muted= "Displaying #{@courses.length} records"
        != pagy_bootstrap_nav(@pagy)

