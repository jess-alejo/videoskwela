.card
  .card-header
    .d-flex.justify-content-between.align-items-center
      = link_to user_path(user), class: 'text-decoration-none text-reset' do
        .fa.fa-user.me-1
        = user.email
      - if user.online?
        .badge.bg-success
          %small online
  %ul.list-group.border-0
    %li.list-group-item
      Signed up
      = time_ago_in_words(user.created_at)
      ago
    %li.list-group-item
      Sign In Count
      = user.sign_in_count
    %li.list-group-item
      Current Sign In At
      = user.current_sign_in_at
    %li.list-group-item
      Last Sign In At
      = user.last_sign_in_at
    %li.list-group-item
      Current Sign In IP
      = user.current_sign_in_ip
    %li.list-group-item
      Last Sign In IP
      = user.last_sign_in_ip
    %li.list-group-item
      Confirmed email?
      - if user.confirmed_at.present?
        .badge.bg-success Yes
      - else
        .badge.bg-danger No
    %li.list-group-item
      .clearfix
        .float-start
          Created Courses
          = user.courses_count
        .float-end
          Enrolled Courses
          = user.enrollments_count
    %li.list-group-item
      .d-flex.justify-content-between
        .roles
          - user.roles.each do |role|
            .badge.bg-info
              = role.name
        = link_to 'Edit', edit_user_path(user), class: 'btn btn-warning btn-sm ml-auto' if policy(user).edit?
