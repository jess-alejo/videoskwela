- page_title @user.email + ' Profile'

.card
  .card-body
    %h5.card-title
      .fa.fa-user.me-1
      = @user.email
    %p.card-text
      = simple_form_for @user do |f|
        = f.collection_check_boxes :role_ids, Role.all, :id, :name do |cb|
          .form-check
            = cb.check_box class: 'form-check-input'
            = cb.label class: 'form-check-label' do
              = cb.text
        = f.error :roles, class: 'text-danger'
        %hr
        = f.button :submit, class: 'btn btn-success'
        = link_to 'Cancel', users_path, class: 'btn btn-outline-secondary'