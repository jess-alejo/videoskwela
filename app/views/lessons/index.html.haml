- page_title 'Course Lessons'

%nav{"aria-label" => "breadcrumb"}
  %ol.breadcrumb
    %li.breadcrumb-item
      = link_to 'Courses', courses_path
    %li.breadcrumb-item
      = link_to @course.title, course_path(@course)
    %li.breadcrumb-item.active{"aria-current" => "page"} Lessons

.row
  .col-xl-4
    = render 'courses/course_card', course: @course
  .col-xl-8
    - if @course.author == current_user
      = render 'lessons_card', course: @course, lessons: @lessons
    - else
      - @lessons.each do |lesson|
        = render 'lessons/lesson', course: @course, lesson: lesson
