.devise-form
  %h1.h3.mb-3.fw-normal
    Please sign in
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name),
    wrapper: :floating_labels_form,
    wrapper_mappings: { select: :floating_labels_select }) do |f|
    = f.input :email,
      required: false,
      autofocus: true,
      input_html: { autocomplete: "email" },
      placeholder: 'name@example.com'

    = f.input :password,
      required: false,
      input_html: { autocomplete: "current-password" },
      placeholder: 'Password'

    - if devise_mapping.rememberable?
      = f.input :remember_me, as: :boolean, wrapper_html: { class: 'text-start mb-3' }

    .form-actions.mb-3
      = f.submit "Sign in", class: 'w-100 btn btn-lg btn-primary'

    .small
      = render "devise/shared/links"
