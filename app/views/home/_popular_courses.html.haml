.container.mb-5
  .pb-3
    %h3 Popular Courses
  .row.row-cols-1.row-cols-md-2.row-cols-lg-4.g-3.mb-3
    - @popular_courses.each do |course|
      .col
        = render "courses/course", course: course
  .text-end
    = link_to "See more popular courses",
      courses_path(courses_search: { s: "enrollments_count desc" })
