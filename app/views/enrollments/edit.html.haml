%h1 Course Review

.form.mb-3
  = simple_form_for @enrollment, wrapper_mappings: { radio_buttons: :vertical_collection_inline } do |f|
    = f.error_notification
    = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

    .form-inputs
      = f.input :rating, collection: 1..5, as: :radio_buttons
      = f.input :review

    .form-actions
      = f.button :submit, 'Submit Review'


= link_to 'Show', @enrollment
\|
= link_to 'Back', enrolled_courses_path
